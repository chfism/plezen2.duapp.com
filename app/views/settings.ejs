<!-- content -->
<div class="content">
<div class="container"><h1 data-i18n="settinglang.settings">
</h1>

<div class="container span8 settings-panel"><h2 data-i18n="settinglang.license"></h2>

    <div class="well span8">
        <div class="banner">
            <div class="subscription-text"><p>

                    1 Plezen <span class="license-long"><span
                                class="license-type">Free</span> subscription</span></p></div>
            <div class="subscription-price"><span class="license-price pull-right"><span
                            class="license-currency">$</span>0</span></div>
            <hr class="subscription-divider">
            <div><p><br><span class="quota-usage"><span class="license-space-used"> 0 </span> of your <span
                                class="quota">100 MB</span> is used</span></p></div>
        </div>
        <div class="form-actions call-action"><a href="/profile/upgrade/?click_source=license_block"
                                                 class="btn btn-primary pull-right bttn blue mid">Upgrade</a>
        </div>
    </div>
</div>
<div class="container span8 settings-panel" id="panel-profile"><h2 data-i18n="settinglang.personal"></h2>

    <div class="well span8 tab-name"><h3 data-i18n="settinglang.username"></h3>

        <div class="row">
            <div class="control-group span8">
                <div class="controls">
                    <input name="first_name" value="<%= user.username %>"
                           class="input-large span8" type="text" placeholder="First name">
                </div>
            </div>
        </div>
        <div class="form-actions call-action with-buttons">
            <button class="btn pull-right" data-i18n="settinglang.cancel"></button>
            <button class="btn btn-primary pull-right change-name" id="changename"
                    data-i18n="settinglang.save"></button>
        </div>

    </div>
    <div id="panel-about" class="well span8 tab-about" style="margin-top: 15px"><h3
                data-i18n="settinglang.profile"></h3>


        <textarea name="about_text" rows="6" class="span8"
                  data-i18n="[placeholder]settinglang.placeholderprofile"><%= user.profile %></textarea>

        <div class="form-actions call-action with-buttons">
            <button class="btn pull-right" data-i18n="settinglang.cancel"></button>
            <button class="btn btn-primary pull-right change-name" id="changeprofile"
                    data-i18n="settinglang.save"></button>
        </div>

    </div>
</div>
<div class="container span8 settings-panel"><h2 data-i18n="settinglang.language"></h2>

    <div class="well span8 tab-lang">

        <select name="lang_preference" id="dp_lang_preference">
            <option value="en" selected="selected">English</option>
            <option value="ja">日本語</option>
        </select>

        <div class="form-actions call-action with-buttons"><b>Language: </b><span
                    class="long">English</span>
            <button class="btn pull-right" data-i18n="settinglang.cancel"></button>
            <button class="btn btn-primary pull-right change-name" id="changelanguage"
                    data-i18n="settinglang.save"></button>
        </div>

    </div>
</div>
<hr class="separator span8">
<div class="container span8 settings-panel license"></div>
<div class="container span8 settings-panel" id="settings-tab-email"><h2>Email</h2>

    <p data-i18n="settinglang.currentemail"></p><span class="current-email"><%= user.email %></span>

    <p data-i18n="settinglang.changeemail"></p>

    <div class="well span8">

        <input name="new_email" type="email" class="span8 input-large" placeholder="New email">

        <div class="form-actions call-action with-buttons">
            <button class="btn pull-right" data-i18n="settinglang.cancel"></button>
            <button class="btn btn-primary pull-right change-name" id="changeemail"
                    data-i18n="settinglang.save"></button>
        </div>

    </div>
</div>
<div class="container span8 settings-panel password-change"><h2 data-i18n="settinglang.password"></h2>

    <div class="well span8">

        <div class="control-group">
            <div class="controls"><input class="input-large span8" type="password" name="new_password1"
                                         placeholder="New password"></div>
        </div>
        <div class="control-group">
            <div class="controls"><input class="input-large span8" type="password" name="new_password2"
                                         placeholder="New password again please"></div>
        </div>
        <div class="form-actions call-action with-buttons">
            <button class="btn pull-right" data-i18n="settinglang.cancel"></button>
            <button class="btn btn-primary pull-right change-name" id="changepassword"
                    data-i18n="settinglang.save"></button>
        </div>

    </div>
</div>
